class Menu():

    def_init_(self):
    self.menu = ConsoleMenu("Smart Library Menu")

    def menu(self):
        self.add_menuitem("Option 1" + "Search a book")
        self.add_menuitem("Option 2" + "Search a book")
        self.add_menuitem("Option 3" + "Search a book")
        self.add_menuitem("Option 4" + "Logout")

        while True:
            try:
                choice = int(input("Choose an option : "))
                if choice == Option 1
                #To be completed
                break
                elif choice == Option 2:
                #To be completed
                break
                elif choice == Option 3:
                #To be completed
                break
                else:
                    print("Invalid option. Please try again")
                    Menu()
            except ValueError:
                print("Invalid option. Please Try again")
                    
